<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manofthematch.SingleClub"
             xmlns:local="clr-namespace:Manofthematch.Controls"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             BackgroundImage="FodboldBG.png"
             BackgroundColor="Transparent"
             Title="Klubber"
             ControlTemplate="{DynamicResource MainPageTemplate}">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Column="0" Grid.Row="0">
            <local:HVScrollGridView ListOrientation="Horizontal"
                        x:Name="sponsorList"
                        VerticalOptions="Start"
                                    HeightRequest="100"
                                    >
                <local:HVScrollGridView.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <ContentView.Content>
                               
                                    <StackLayout WidthRequest="130">

                                    <Image Source="{Binding sponsorLogo}" Margin="10" HeightRequest="100" HorizontalOptions="Center"/>
                                    </StackLayout>


                            </ContentView.Content>
                        </ContentView>
                    </DataTemplate>
                </local:HVScrollGridView.ItemTemplate>
            </local:HVScrollGridView>
            </StackLayout>

            <ScrollView Grid.Column="0" Grid.Row="1">
            <flv:FlowListView x:Name="clubTeamList" BackgroundColor="Transparent" FlowColumnCount="4" SeparatorVisibility="None" HasUnevenRows="False" RowHeight="40" FlowUseAbsoluteLayoutInternally="false" IsGroupingEnabled="false" VerticalOptions="FillAndExpand">
             <flv:FlowListView.FlowColumnTemplate>
                        <DataTemplate>
                            <StackLayout BackgroundColor="Transparent" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                                <!--<Image Source="{Binding TeamName}" HeightRequest="40" WidthRequest="40" />-->
                                <Label Text="{Binding TeamName}" TextColor="#fff" HorizontalOptions="CenterAndExpand"/>
                            </StackLayout>
                        </DataTemplate>
                    </flv:FlowListView.FlowColumnTemplate>
                </flv:FlowListView>
            </ScrollView>


            
            <StackLayout Grid.Column="0" Grid.Row="2">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="current" Clicked="currentMatchSorting" BackgroundColor="Transparent" Text="Aktuelle" FontSize="22" TextColor="White"></Button>
                <Button x:Name="coming" Clicked="comingMatchSorting" BackgroundColor="Transparent" Text="Kommende" HorizontalOptions="Center" FontSize="16"></Button>
                <Button x:Name="completed" Clicked="completedMatchSorting" BackgroundColor="Transparent" Text="Afsluttede" FontSize="16"></Button>
            </StackLayout>

         <local:HVScrollGridView ListOrientation="Horizontal"
                                    x:Name="gameList"
                                    VerticalOptions="Start">
                <local:HVScrollGridView.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <ContentView.Content>
                                <Frame HasShadow="false" CornerRadius="10" WidthRequest="140" BackgroundColor="White" Margin="20">
                                <StackLayout>
                                    <Label Text="{Binding matchStartDateTime}"
                                               LineBreakMode="MiddleTruncation"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding matchAddress}"
                                               LineBreakMode="MiddleTruncation"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"/>
                                        <Grid>
                                            
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="0.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        
                                        </Grid.RowDefinitions>

                                    <Label Grid.Column="0" Grid.Row="0" Text="Holdnavn"
                                               LineBreakMode="MiddleTruncation"
                                               HorizontalTextAlignment="Start"
                                               VerticalTextAlignment="Center"/>
                                    <Label Grid.Column="1" Grid.Row="0" Text="{Binding homeGoal}"
                                               LineBreakMode="MiddleTruncation"
                                               HorizontalTextAlignment="End"
                                               VerticalTextAlignment="Center"/>
                                    <Label Grid.Column="0" Grid.Row="1" Text="{Binding opponent}"
                                               LineBreakMode="MiddleTruncation"
                                               HorizontalTextAlignment="Start"
                                               VerticalTextAlignment="Center"/>
                                    <Label Grid.Column="1" Grid.Row="1" Text="{Binding opponentGoal}"
                                               LineBreakMode="MiddleTruncation"
                                               HorizontalTextAlignment="End"
                                               VerticalTextAlignment="Center"/>
                                    

                                </Grid>
                                            <StackLayout Margin="0, 20, 0, 0">
                                            <Button Style="{StaticResource btnStyle}" WidthRequest="50" Text="Stem"/>
                                            </StackLayout>
                                      </StackLayout>
                                </Frame>

                            </ContentView.Content>
                        </ContentView>
                    </DataTemplate>
                </local:HVScrollGridView.ItemTemplate>
            </local:HVScrollGridView>
            </StackLayout>

            </Grid>
   </ContentPage.Content>
</ContentPage>