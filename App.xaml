<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manofthematch.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="btnColor">#F8144E</Color>
            <Color x:Key="textColorGray">#707070</Color>
            

            <Style x:Key="btnStyle" TargetType="Button">
                <!--<Setter Property="FontSize" Value="10"/>-->
                <Setter Property="BackgroundColor" Value="#F8144E"/>
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="BorderWidth" Value="5"/>
                <Setter Property="WidthRequest" Value="70"/>
                <Setter Property="HeightRequest" Value="30"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

            <ControlTemplate x:Key="MainPageTemplate">

                <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" ColumnSpacing="0" RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Begin Header -->
                    <StackLayout x:Name="navBar"
                        Orientation="Vertical"
                        HorizontalOptions="Start"
                        VerticalOptions="FillAndExpand"
                        Spacing="0"
                        BackgroundColor="#0000"
                        HeightRequest="100"
                        Grid.Column="0" Grid.Row="0">
                            <StackLayout.Padding>
                                <OnPlatform x:TypeArguments="Thickness"
                                iOS="10, 10, 10, 10"
                                Android="10, 10, 10, 10"
                                WinPhone="10, 10, 10, 10" />
                            </StackLayout.Padding>
                        <!-- Header Content. -->
                        <Image Source="arrowback.png" WidthRequest="20" HeightRequest="20">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnBackButtonPressed" />
                            </Image.GestureRecognizers>
                        </Image>
                    </StackLayout>
                    <!-- End Header -->

                    <!-- Begin Content -->
                    <ScrollView Grid.Column="0" Grid.Row="1">
                        <ContentPresenter VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
                    </ScrollView>
                    <!-- End Content -->
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
