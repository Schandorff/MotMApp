<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manofthematch.LandingPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" Icon="ic_autorenew.png" Clicked="OnRefresh" />
      </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
         <Button Clicked="OnRefresh" Text="klik mig" Margin="50"/>
            <ScrollView>
               
               <ListView ItemsSource="{Binding}"
                    ItemTapped="OnClubSelect" SeparatorColor="Transparent" SeparatorVisibility="None">
            <ListView.ItemTemplate>
              <DataTemplate>
                <TextCell Text="{Binding clubName}" Detail="{Binding clubAddress}">
                  
                </TextCell>
              </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>